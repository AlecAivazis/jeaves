{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "jeeves",
    "labels": {
      "app": "jeeves"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "jeeves"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "jeeves"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "bot",
            "image": "{{ .Values.image }}",
            "ports": [
              {
                "containerPort": 4000
              }
            ],
            "env": [
              {
                "name": "DB_HOST",
                "value": "10.33.240.3"
              },
              {
                "name": "DB_NAME",
                "value": "jeeves"
              }
            ]
          }
        ]
      }
    }
  }
}
